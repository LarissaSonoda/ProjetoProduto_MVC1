@model ProjetoPoduto.Models.Produto

@{ 
    ViewBag.Title = "Index";
}
<h2>Cadastro de Produtos</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            Código
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.codigo)
            @Html.ValidationMessageFor(model => model.codigo)
        </div>
        <!--Campo nome do produto-->
        <div class="editor-label">
            Nome do Produto
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nome)
            @Html.ValidationMessageFor(model => model.nome)
        </div>
        <!--Campo Descrição-->
        <div class="editor-label">
            Descrição
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.desc)
            @Html.ValidationMessageFor(model => model.desc)
        </div>
        <!--Campo Peso-->
        <div class="editor-label">
            Peso
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.peso)
            @Html.ValidationMessageFor(model => model.peso)
        </div>
        <!--Campo categoria-->
        <div class="editor-label">
            Categoria
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.categoria)
            @Html.ValidationMessageFor(model => model.categoria)
        </div>
        <!--Campo Valor Unitário-->
        <div class="editor-label">
            Valor Unitário
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valUnit)
            @Html.ValidationMessageFor(model => model.valUnit)
        </div>

        <input type="submit" value="Cadastrar" />
    </fieldset>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
        }

}